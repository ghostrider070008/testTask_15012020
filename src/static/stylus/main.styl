@import "fonts.styl"
@import "libs.styl"
fonts = BebasNeue-Bold
white = #ffff
grey = #aaaaaa
fontsStyle(color = white, font = fonts)
  font-family font
  color white


.container
  background: linear-gradient(to top, #3a3b57, #364a57)
  h1
    fontsStyle()
    //font-family fonts
    font-size 48pt
    //color white
    text-align center
    width 100%
    margin-bottom 68px
    margin-top 68px
  h2
    fontsStyle()
    //font-family fonts
    //color white
    font-size 24pt
  h3
    font-family fonts
    color grey
    font-size 18pt
  #Star
    font-size 10pt
  .polosa
    width 100%
    height 7px
  .pol
    width 50%
    height 7px
    border 1px solid
    background linear-gradient(to right, #ff6c00 100%, transparent 50%)
    box-shadow 0 -45px 98px 56px rgba(255, 108, 0, .5)




